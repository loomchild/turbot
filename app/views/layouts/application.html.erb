      <%= yield(:head) %>
    <% end %>

    <script>
      document.addEventListener('turbo:morph', () => { console.log('MORPH') });
    </script>
  </head>

  <body>
    <main class="container mx-auto mt-16 mb-10 max-w-5xl">
      <%= yield %>
    </main>
  </body>
</html>
